# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_API_VERSION=v1

# Blockchain Configuration
VITE_BLOCKCHAIN_NETWORK=localhost
VITE_BLOCKCHAIN_RPC_URL=http://localhost:8545
VITE_CONTRACT_ADDRESS=0x...

# Authentication
VITE_JWT_SECRET=your-jwt-secret-here
VITE_AUTH_PROVIDER=local

# File Upload & Storage
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
VITE_CLOUDINARY_API_KEY=your-api-key
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# WebSocket Configuration
VITE_WS_URL=ws://localhost:3001
VITE_WS_RECONNECT_INTERVAL=5000

# Application Settings
VITE_APP_NAME=Smart Vendor Compliance
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# Feature Flags
VITE_ENABLE_BLOCKCHAIN=true
VITE_ENABLE_ML_FRAUD_DETECTION=true
VITE_ENABLE_MOBILE_SCANNER=true
VITE_ENABLE_ANALYTICS=true

# Theme & UI
VITE_DEFAULT_THEME=light
VITE_ENABLE_THEME_SWITCHING=true
VITE_ANIMATION_DURATION=300

# Monitoring & Analytics
VITE_ENABLE_LOGGING=true
VITE_LOG_LEVEL=info
VITE_ANALYTICS_ID=GA-XXXXXXXX

# Development
VITE_DEV_MODE=true
VITE_MOCK_API=false
VITE_DEBUG_MODE=false